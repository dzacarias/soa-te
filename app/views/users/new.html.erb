<div class="column prepend-8 span-8 append-8 centered">

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login"><%= "Login"[:login] %></label>
<%= f.text_field :login %></p>

<p><label for="email"><%= "Email"[:email] %></label>
<%= f.text_field :email %></p>

<p><label for="password"><%= "Password"[:password] %></label>
<%= f.password_field :password %></p>

<p><label for="password_confirmation"><%= "Confirm Password"[:confirm_password] %></label>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag "Sign up"[:signup] %></p>
<% end -%>

</div>
