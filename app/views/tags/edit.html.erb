<h1><%= "Edit tag"[:edit_tag ]%></h1>

<div class="column prepend-8 span-8 append-8 centered">

<%= error_messages_for :tag %>

<% form_for(:tag, :url => tag_path(@tag), :html => { :method => :put }) do |f| %>
  <p>
	<label for="tag_name"><%= "Name"[:name] %></label>
	<%= f.text_field :name %>
  </p>
  <p>
    <%= submit_tag "Update"[:update] %> <%= "or"[:or] %> <%= link_to "Delete tag"[:remove_tag], tag_path(@tag), :method => :delete, :confirm => "Are you sure?"[:are_you_sure] %>
  </p>
<% end %>

<%= link_to "Back"[:back], tags_path %>

</div>