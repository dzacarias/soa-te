<h1><%= "Edit sound"[:edit_sound] %></h1>

<div class="column prepend-8 span-8 append-8 centered">

<%= error_messages_for :sound %>

<% form_for(:sound, :url => sound_path(@sound), :html => { :method => :put }) do |f| %>
  <p>
    <label for="sound_title"><%= "Title"[:title] %></label>
    <%= f.text_field :title %>
  </p>
  <p>
		<label for="sound_tags"><%= "Tags (comma separated)"[:tags_form] %></label>
		<%= text_field_tag("sound[tags]", @sound.tags.collect{|u| u.name}.join(', '), :size => 32, :id => 'sound_tags') %> 
		<div class="auto_complete" id="sound_tags_auto_complete"></div>
		<%= auto_complete_field :sound_tags, :url=> { :controller => 'tags', :action => 'auto_complete_for_tag_name' }, :tokens => ',' %>
  </p>
  <p>
    <%= submit_tag "Update"[:update] %> ou <%= link_to "Delete sound"[:delete_sound], sound_path(@sound), :method => :delete, :confirm => "Are you sure"[:are_you_sure] %>
  </p>
<% end %>

<%= link_to "Back"[:back], sounds_path %>

</div>